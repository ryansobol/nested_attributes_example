= form_for @house do |f|
  - if @house.errors.any?
    #error_explanation
      %h2= "#{pluralize(@house.errors.count, "error")} prohibited this house from being saved:"
      %ul
        - @house.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :name
    = f.text_field :name
  = f.fields_for :board do |board_f|
    .field
      = board_f.label :title
      = board_f.text_field :title
    .field
      = board_f.label :content
      = board_f.text_area :content
  .actions
    = f.submit 'Save'
